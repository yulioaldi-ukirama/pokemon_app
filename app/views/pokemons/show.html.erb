<h1>Pokemon Detail</h1>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Current HP</th>
        <th>Attack</th>
        <th>Defense</th>
        <th>Sp. Attack</th>
        <th>Sp. Defense</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @pokemon.name %></td>
          <td><%= @pokemon.current_health_point %>/<%= @pokemon.max_health_point %></td>
          <td><%= @pokemon.attack %></td>
          <td><%= @pokemon.defense %></td>
          <td><%= @pokemon.special_attack %></td>
          <td><%= @pokemon.special_defense %></td>
        </tr>
    </tbody>
  </table>
</div>

<h3>Pokemon Moves</h3>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Power Points</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <% @moves.each do |move| %>
        <tr>
          <td><a href="#"><%= move.id %></a></td>
          <td><a href="#"><%= move.name %></a></td>
          <td><a href="#"><%= move.power_points %></a></td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<%= button_to "Edit", edit_pokemon_path(@pokemon), method: :get %>
<%= button_to "Delete", pokemon_path(@pokemon), method: :delete, data: {confirm: 'Are you sure you want to delete a Pokemon named pokemon_name?'} %>
<%= button_to "Edit Moves", pokemon_edit_moves_path(@pokemon), method: :get %>

<%= button_to "Back", pokemons_path, method: :get, class: "text-center" %>