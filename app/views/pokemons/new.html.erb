<h1 class="text-center">Create Pokemon</h1>

<div class="container text-center">
  <div class="row justify-content-center">
    <div class="text-center col col-lg-7">
      <%= form_with(model: @pokemon, url: pokemons_path, method: :post) do |form| %>
        <% if @pokemon.errors.any? %>
          <div id="error_explanation" class="alert alert-danger my-4">
            <h3><%= pluralize(@pokemon.errors.count, "error") %> prohibited this pokemon from being saved:</h2>
            <ul>
              <% @pokemon.errors.each do |error| %>
                <li class="text-start"><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field my-3">
          <%= form.label :name, class: "sr-only" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>

        <div class="field my-3">
          <%= form.label :species_id, class: "sr-only" %>
          <%= form.select :species_id, options_for_select(Species.pluck(:name, :id)), class: "form-control", placeholder: "Species" %>
        </div>

        <div class="actions">
          <%= form.submit "Next", class: "btn btn-secondary m-3" %>
        </div>
      <% end %>

      <%= button_to "Cancel", pokemons_path, method: :get, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

