<h1 class="text-center">Pokemons List</h1>

<%= button_to "Create New Pokemon", new_pokemon_path, method: :get, class: "btn btn-secondary my-4" %>
<%= button_to "Heals", pokemon_heals_path, method: :post, class: "btn btn-secondary mb-4" %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Current HP</th>
        <th>Level</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pokemons.each do |pokemon| %>
        <tr>
          <td><a href="<%= pokemon_path(pokemon) %>"><%= pokemon.id %></a></td>
          <td><a href="<%= pokemon_path(pokemon) %>"><%= pokemon.name %></a></td>
          <td><a href="<%= pokemon_path(pokemon) %>"><%= pokemon.current_health_point %>/<%= pokemon.max_health_point %></a></td>
          <td><a href="<%= pokemon_path(pokemon) %>"><%= pokemon.level %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>