<h1>Battle List</h1>

<%= button_to "Create New Battle", new_battle_path, method: :get %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Pokemon 1</th>
        <th>VS</th>
        <th>Pokemon 2</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @battles.each do |battle| %>
        <tr>
          <td><a href="<%= battle_path(battle) %>"><%= battle.id %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.pokemon %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.pokemon %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>