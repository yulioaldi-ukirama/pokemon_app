<h1 class="text-center">Battles List</h1>

<%= button_to "Create New Battle", new_battle_path, method: :get, class: "btn btn-secondary" %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Pokemon A</th>
        <th>VS</th>
        <th>Pokemon B</th>
        <th>Turn</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @battles.each do |battle| %>
        <tr>
          <td><a href="<%= battle_path(battle) %>"><%= battle.id %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.pokemons[0].name %></a></td>
          <td><a href="<%= battle_path(battle) %>">Versus</a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.pokemons[1].name %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.turn %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.status %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>