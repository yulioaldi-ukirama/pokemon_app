<h1 class="text-center">Battles List</h1>

<%= button_to "Create New Battle", new_battle_path, method: :get, class: "btn btn-secondary my-4" %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Pokemon A</th>
        <th>Winning Status</th>
        <th>VS</th>
        <th>Pokemon B</th>
        <th>Winning Status</th>
        <th>Turn</th>
        <th>Battle Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @battles.each do |battle| %>
        <% pokemon1 = battle.pokemon_1 %>
        <% pokemon2 = battle.pokemon_2 %>
        <tr>
          <td><a href="<%= battle_path(battle) %>"><%= battle.id %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= pokemon1.name %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.pokemon_1_winning_status %></a></td>
          <td><a href="<%= battle_path(battle) %>">Versus</a></td>
          <td><a href="<%= battle_path(battle) %>"><%= pokemon2.name %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.pokemon_2_winning_status %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.turn %></a></td>
          <td><a href="<%= battle_path(battle) %>"><%= battle.status %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>